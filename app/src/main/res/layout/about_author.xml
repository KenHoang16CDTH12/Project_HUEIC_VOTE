<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_singer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hueic.club.vote.SingerActivity"
    android:background="@mipmap/bg_main">
    <RelativeLayout
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/label_aboutapp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_toLeftOf="@+id/btnMenu"/>

    </RelativeLayout>
        <TextView
            android:id="@+id/tvTenUngDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_header"
            android:text="@string/label_aboutNameApp"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tvHueIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar_header"
            android:gravity="center"
            android:text="        HUEIC VOTE"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvPhienBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTenUngDung"
            android:text="@string/label_aboutPhienBanApp"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tvPBApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTenUngDung"
            android:layout_marginLeft="180dp"
            android:text="app_version_1.0"
            android:textColor="#000000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/tvNhomPhatTrien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhóm phát triển :"
        android:layout_below="@+id/tvPhienBan"
        android:textSize="18sp"
        android:layout_marginBottom="3dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTTB"
        android:src="@mipmap/ic_avatar"
        android:layout_below="@+id/tvNhomPhatTrien"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/colorDangDien" />
    <TextView
        android:id="@+id/tvTTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNhomPhatTrien"
        android:text="Trần Thanh Bình "
        android:layout_toRightOf="@+id/imgTTB"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTTB"
        android:layout_toRightOf="@+id/imgTTB"
        android:text="Leader"
        android:layout_marginTop="10dp"
        android:textColor="#757575"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgDMH"
        android:src="@mipmap/ic_avatar"
        android:layout_below="@+id/imgTTB"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/color1"/>
    <TextView
        android:id="@+id/tvDMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgTTB"
        android:text="Dương Minh Hoàng  "
        android:layout_toRightOf="@+id/imgDMH"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvAndroidDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDMH"
        android:layout_toRightOf="@+id/imgDMH"
        android:text="Android Developer"
        android:layout_marginTop="10dp"
        android:textColor="#757575"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgHBV"
        android:src="@mipmap/ic_avatar"
        android:layout_below="@+id/imgDMH"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/color2"/>
    <TextView
        android:id="@+id/tvHBV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDMH"
        android:text="Hoàng Bảo Vũ  "
        android:layout_toRightOf="@+id/imgDMH"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvFrontEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHBV"
        android:layout_toRightOf="@+id/imgHBV"
        android:text="Front-end Developer"
        android:layout_marginTop="10dp"
        android:textColor="#757575"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTAQ"
        android:src="@mipmap/ic_avatar"
        android:layout_below="@+id/imgHBV"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/color3"/>
    <TextView
        android:id="@+id/tvTAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgHBV"
        android:text="Trần Anh Quốc   "
        android:layout_toRightOf="@+id/imgDMH"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvBackEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTAQ"
        android:layout_toRightOf="@+id/imgTAQ"
        android:text="Back-end Developer/DataBase"
        android:layout_marginTop="10dp"
        android:textColor="#757575"/>


</RelativeLayout>

