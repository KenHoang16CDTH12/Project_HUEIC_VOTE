<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_singer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hueic.club.vote.SingerActivity"
    android:background="@mipmap/bg_main">
    <RelativeLayout
        android:id="@+id/bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/label_thongtin"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/btnBack"
            android:layout_toLeftOf="@+id/btnMenu"/>
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_menu_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTietMuc"
        android:src="@mipmap/ic_avatar"
        android:layout_below="@+id/bar_header"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        app:civ_border_width="10dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/colorChuaDien"/>
    <TextView
        android:id="@+id/tvTenTietMuc"
        android:layout_below="@+id/imgTietMuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ten Tiet Muc"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:layout_margin="5dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvTenDonVi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_below="@+id/tvTenTietMuc"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="Ten Don Vi"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvVote"
        android:layout_below="@+id/tvTenDonVi"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="100"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bd_dadien"/>
    <Button
        android:id="@+id/btnVote"
        android:text="@string/label_vote"
        android:background="#e83445"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
</RelativeLayout>
