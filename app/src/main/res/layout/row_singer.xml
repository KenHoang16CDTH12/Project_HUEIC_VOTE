<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/main"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_chuadien"
        android:padding="2dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgTietMuc"
            android:src="@mipmap/ic_tietmuc"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:civ_border_width="1dp"
            app:civ_border_color="#F8BBD0"/>
        <TextView
            android:id="@+id/tvVote"
            android:text="10"
            android:textColor="#FFFFFF"
            android:layout_gravity="top|right"
            android:background="@mipmap/bg_heart"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/tvSoBaoDanh"
        android:text="SBD:001"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/main"
        android:gravity="center"
        android:background="@drawable/bd_dangdien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
